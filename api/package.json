{
  "name": "bagelbot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/src/index.js",
    "format": "prettier --write src",
    "update-service": "curl -X POST https://portainer.erwijet.com/api/webhooks/d932b4a6-a777-49fc-b7c2-d070b0ff485a",
    "wait-for-healthcheck": "printf 'waiting for healthcheck...\t' && until curl -s -f -o /dev/null https://bagelbot.erwijet.com/healthcheck ; do sleep 1 ; done && echo [healthy]",
    "docker-login": "docker login bagelbot.registry.erwijet.com -u publisher -p bagelbot &> /dev/null",
    "docker-build": "docker build . -t bagelbot.registry.erwijet.com/api:latest",
    "docker-push": "docker push bagelbot.registry.erwijet.com/api:latest",
    "deploy": "yarn docker-build && yarn docker-login && yarn docker-push && yarn update-service && sleep 5 && yarn wait-for-healthcheck"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/node-fetch": "^2.6.1",
    "@urql/core": "^2.5.0",
    "axios": "^0.27.2",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mongoose": "^6.4.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/morgan": "^1.9.3",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  }
}
