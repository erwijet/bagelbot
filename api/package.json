{
  "name": "bagelbot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/src/index.js",
    "format": "prettier --write src",
    "update-service": "curl -X POST https://portainer.erwijet.com/api/webhooks/f4a9fb1a-3ba9-4206-8bc1-99bded787944",
    "wait-for-healthcheck": "printf 'waiting for healthcheck...\t' && until curl -s -f -o /dev/null https://bagelbot.erwijet.com/healthcheck ; do sleep 1 ; done && echo [healthy]",
    "docker-login": "docker login -u balsambagelbot -p b@gelb0t! &> /dev/null",
    "docker-build": "docker build . -t balsambagelbot/api:latest",
    "docker-push": "docker push balsambagelbot/api:latest",
    "deploy": "yarn docker-build && yarn docker-login && yarn docker-push && yarn update-service && sleep 5 && yarn wait-for-healthcheck"
  },
