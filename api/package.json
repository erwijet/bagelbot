    "elasticlunr": "^0.9.5",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mongoose": "^6.4.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.6"
  },
  "devDependencies": {
    "@types/elasticlunr": "^0.9.5",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/morgan": "^1.9.3",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  }
