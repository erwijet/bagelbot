{
  "name": "bagelbot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "build-menu": "ts-node menu/build-items.ts",
    "start": "npm run build && node dist/src/index.js",
    "format": "prettier --write src",
    "update-service": "kubectl rollout restart deploy bagelbot-deployment -n  bagelbot",
    "docker-build": "docker buildx build --platform linux/amd64 . -t ghcr.io/bagelbotdev/api:latest",
    "docker-push": "docker push ghcr.io/bagelbotdev/api:latest",
    "deploy": "yarn docker-build && yarn docker-push",
    "rollout": "yarn deploy && sleep 3 && yarn update-service && sleep 1 && watch -n 0.5 curl -sL https://bagelbot.erwijet.com/healthcheck"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/node-fetch": "^2.6.1",
    "@urql/core": "^2.5.0",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "elasticlunr": "^0.9.5",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "mongoose": "^6.4.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.6",
    "random-words": "^1.2.0"
  },
  "devDependencies": {
    "@types/elasticlunr": "^0.9.5",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/morgan": "^1.9.3",
    "prettier": "^2.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.3"
  }
}
