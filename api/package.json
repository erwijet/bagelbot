{
  "name": "bagelbot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/src/index.js",
    "format": "prettier --write src",
    "update-service": "curl -X POST https://webhook.csh.erwijet.com/deploy/bagelbot",
    "docker-build": "docker build . -t bb.cr.erwijet.com:5001/api:latest",
    "docker-push": "docker push bb.cr.erwijet.com:5001/api:latest",
    "deploy": "yarn docker-build && yarn docker-push",
    "rollout": "yarn deploy && sleep 3 && kubectl rollout restart deployment bagelbot-deployment -n bagelbot && sleep 1 && watch -n 0.5 curl -sL https://bagelbot.erwijet.com/healthcheck"
  },
  "keywords": [],
